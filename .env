# ======================================================
# GOVERNMENT HOSPITAL AI HEALTHCARE SYSTEM
# Environment Variables Template
# ======================================================

# ----------------------
# APPLICATION SETTINGS
# ----------------------
APP_NAME="AI Healthcare Risk Prediction System"
APP_ENV="development"          # development | staging | production
DEBUG=True
LOG_LEVEL="INFO"

# ----------------------
# STREAMLIT SETTINGS
# ----------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS="0.0.0.0"

# ----------------------
# FASTAPI SETTINGS
# ----------------------
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=1

# ----------------------
# SECURITY / AUTH
# ----------------------
SECRET_KEY="change_this_to_a_secure_random_key"
JWT_SECRET_KEY="change_this_jwt_secret"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ----------------------
# DATABASE CONFIGURATION
# ----------------------
DB_TYPE="sqlite"               # sqlite | postgresql | mysql
DB_NAME="medical_ai_system.db"

# PostgreSQL (if used)
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="healthcare_ai"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"

# ----------------------
# MACHINE LEARNING PATHS
# ----------------------
MODEL_DIR="models/trained_models"
SCALER_DIR="models/scalers"
ENCODER_DIR="models/encoders"
MODEL_VERSION="v1.0"

# ----------------------
# DATA PATHS
# ----------------------
RAW_DATA_PATH="data/raw"
PROCESSED_DATA_PATH="data/processed"
IMAGE_DATA_PATH="data/images"

# ----------------------
# EXPLAINABILITY
# ----------------------
ENABLE_SHAP=True
SHAP_SAMPLE_SIZE=100

# ----------------------
# AI CHATBOT (OPTIONAL)
# ----------------------
LLM_PROVIDER="openai"          # openai | azure | local
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-4o-mini"

# ----------------------
# GOVERNMENT HOSPITAL SETTINGS
# ----------------------
HOSPITAL_NAME="Government General Hospital"
HOSPITAL_CODE="GGH-IND"
STATE_NAME="Tamil Nadu"
COUNTRY="India"

# ----------------------
# LOGGING
# ----------------------
LOG_DIR="logs"
LOG_FILE="application.log"

# ----------------------
# DOCKER SETTINGS
# ----------------------
DOCKERIZED=True
